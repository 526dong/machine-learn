    public String deleteRole(HttpServletRequest request){
    	long roleId= Long.parseLong(request.getParameter("id"));
    	String result = "999";
    	try {
    		int count = roleApi.selectUserByRoleId(roleId);
    		if (count>0) {
        		result = "888";
    		}else {
    			result = roleApi.deleteByRoleId(roleId);
    		}
		} catch (Exception e) {
			result = "999";
		}
		return result;
    }
    
