				}
			}
			lineMap3.put("line3Abscissa",line3Abscissa);
			lineMap3.put("line3Tpr",line3Tpr);
			lineMap3.put("line3Ks",line3Ks);
			lineMap3.put("line3Fpr",line3Fpr);
