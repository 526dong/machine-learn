/* start 默认样式 */
html,body{ height:100%; min-height:100%;}
body,p,h1,h2,h3,h4,h5,h6,ul,ol,dl,dd,th,td,input,select,form,textarea{margin:0; padding:0; font-size:14px; font-family:'Microsoft Yahei'; color:#3a3f52; font-weight:normal;}
textarea{ resize:none; overflow:auto;}
table{border-collapse:collapse;}
li{list-style:none;overflow:hidden; zoom:1;}
a{text-decoration:none; outline:none;}
img{border:none; vertical-align:top;}
input{border:none;outline:none;} 
strong{font-weight:normal;}
i,em{font-style:normal;}
.clear:after{content:'';display:block;clear:both;}
.clear{zoom:1;}
.fl{ float:left;}
.fr{ float:right;}
/* 默认样式 end*/
/* 页面宽度 */
.main{min-height:100%;position:relative; min-width:1366px; height:100%;}
.round{ border-radius:3px;}
.main_content{min-width:1366px;}
.min_width{min-width:1366px;}
.body_bg{ background:#393f54;}
.body_bg1{ background:#e2ecf6;}
.module{background:#fff; border-radius:3px;}
.padd_bottom{ padding-bottom:130px;}
/* 边框适用百分比 box-sizing:border-box; */
/*text-overflow:ellipsis; white-space:nowrap;*/
/*filter:alpha(opacity=60);滤镜*/
/*右边内容区域最小宽为978*/
/* 进价下拉菜单 start */
.select_parent{ width:304px;}
.select_left,.select_right{ width:148px; position:relative;}
.next_select1{ width:146px; height:30px; line-height:30px; border:1px solid #dcdee7; border-radius:3px; cursor:pointer; background:url(../image/jtyouxh.png) 130px 8px no-repeat;}
.next_select1 i{ float:left; width:122px; text-indent:8px; font-size:12px; color:#3a3f52; height:30px; overflow:hidden;text-overflow:ellipsis; white-space:nowrap;}
.next_active{background:url(../image/jtxiaxh.png) 122px 11px no-repeat;}
.select_box1{ width:146px;border-radius:3px;border:1px solid #dcdee7; position:absolute; left:0; top:34px; z-index:100; background:#fff; display:none;}
.select_box1 p{ height:30px; line-height:30px; cursor:pointer; width:100%; text-indent:8px; overflow:hidden;text-overflow:ellipsis; white-space:nowrap; border-bottom:1px solid #dcdee8; background:#fff; font-size:12px;}
.select_box1 .last_p{ border-bottom:none;}
.next_select_w1{ width:302px;background:url(../image/jtyouxh.png) 284px 8px no-repeat;}
.next_select_w1 i{ width:278px;}
.next_active1{background:url(../image/jtxiaxh.png) 278px 11px no-repeat;}
.select_right1{ margin:0 8px;}
/* 进价下拉菜单 end */
.scene_popup{ width:480px; height:380px; background:#fff; border-radius:10px; position:fixed; top:50%; left:50%; margin-top:-190px; margin-left:-240px; z-index:999; display:none;}
.popup_table{ width:100%;}
.popup_table td{ position:relative;}
.scene_popup h2{ line-height:46px; padding-left:16px; position:relative;}
.scene_popup h2 img{ cursor:pointer; width:24px; height:24px; position:absolute; right:8px; top:8px; z-index:1000;}
.popup_td1{ width:92px; padding-left:22px;font-size:12px;}
.popup_table .error_hint{ left:0; top:52px;}
.popup_table textarea{ height:110px; border-radius:3px; border:1px solid #dcdee7; width:290px; overflow-y:auto; padding:5px; line-height:22px; font-size:12px;}
.popup_td2 a{ width:120px; height:40px; line-height:40px; text-align:center; border-radius:20px; float:left; font-size:12px; color:#fff; background:#7a53fc; margin-top:40px;}
.popup_td2 a:nth-child(2){ background:#dcdee7; margin-left:62px;}
.popup_input{border-radius:3px; border:1px solid #dcdee7; width:290px;font-size:12px; padding:0 5px; height:30px; line-height:30px; margin:20px 0;}


